@{
    Layout = "~/Views/Shared/_SneatProLayout.cshtml";
    ViewData["title"] = "Create User";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span style="cursor: pointer;" onclick="window.location='/Users/Index'" class="text-muted fw-light">Quản lý tài khoản / Tài khoản / </span>Tạo mới </h4>


        <div class="p-3 mt-1 card mb-4">
            <h5 class="card-header">Thông tin tài khoản</h5>
            <div class="row mt-2">
                <div class="col-sm-6">

                    <div class="mb-3">
                        <strong>Ảnh đại diện</strong>

                        <div class="col-md-8" id="divAddImg">
                            <div action="/Home/UploadFiles" class="dropzone needsclick" id="dropzone-basic">
                                <div class="dz-message needsclick">
                                    Drop files here or click to upload
                                    <span class="note needsclick">
                                        Hãy tải ảnh Avatar người dùng tại đây (chỉ được tải duy nhất một ảnh)
                                    </span>
                                </div>
                                <div class="fallback">
                                    <input name="file" type="file" id="fileInput" />
                                </div>
                                <input type="hidden" id="currentImage" value="">
                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-sm-6">

                    <div class="mb-3">
                        <strong>Tên tài khoản</strong><span style="color:red"> *</span>
                        <input type="text" class="form-control" id="nameCreate" name="name" required placeholder="Tên tài khoản">
                    </div>

                    <div class="mb-3">
                        <strong>Email</strong><span style="color:red"> *</span>
                        <input type="text" class="form-control" id="emailCreate" name="email" required placeholder="Nhập email">
                    </div>

                    <div class="mb-3">
                        <strong>Số điện thoại</strong><span style="color:red"> *</span>
                        <input type="number" class="form-control" id="input-add-phone" name="phone" required placeholder="Nhập số điện thoại">
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <strong>Mật khẩu</strong><span style="color:red"> *</span>
                        <div class="col-md-12 col-xs-12 col-sm-12 input-group input-group-merge">
                            <input type="password"
                                   id="txt-pass"
                                   class="form-control"
                                   name="password"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <strong>Xác nhận mật khẩu</strong><span style="color:red"> *</span>
                        <div class="col-md-12 col-xs-12 col-sm-12 input-group input-group-merge">
                            <input type="password"
                                   id="txt-pass-confirm"
                                   class="form-control"
                                   name="password"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Phân quyền</strong><span style="color:red"> *</span>
                        <div class="col-md-12">
                            <div id="slRole"
                                 name="native-select"
                                 placeholder="Chọn vai trò"
                                 data-search="true"
                                 data-silent-initial-value-set="true">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 mb-4">
            <div class="bs-stepper wizard-numbered mt-2">
                <div class="bs-stepper-header">
                    <div class="step" data-target="#account-details">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle">1</span>
                            <span class="bs-stepper-label mt-1">
                                <span class="bs-stepper-title">Chi tiết tài khoản</span>
                                <span class="bs-stepper-subtitle">Thông tin chi tiết cá nhân</span>
                            </span>
                        </button>
                    </div>
                    <div class="line">
                        <i class="bx bx-chevron-right"></i>
                    </div>
                    <div class="step" data-target="#personal-info">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle">2</span>
                            <span class="bs-stepper-label mt-1">
                                <span class="bs-stepper-title">CCCD/CMT</span>
                                <span class="bs-stepper-subtitle">Căn cước công dân/Chứng minh thư</span>
                            </span>
                        </button>
                    </div>
                    <div class="line">
                        <i class="bx bx-chevron-right"></i>
                    </div>
                    <div class="step" data-target="#social-links">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle">3</span>
                            <span class="bs-stepper-label mt-1">
                                <span class="bs-stepper-title">Tài khoản giao dịch</span>
                                <span class="bs-stepper-subtitle">Thông tin tài khoản ngân hàng</span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="bs-stepper-content">
                    <div autocomplete="off">
                        <!-- Account Details -->
                        <div id="account-details" class="content">
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="form-label">Tên họ</label>
                                    <input type="text" id="txtFirstName" class="form-control" placeholder="Nhâp tên họ" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label">Tên đệm</label>
                                    <input type="text" id="txtLastName" class="form-control" placeholder="Nhâp tên đệm" />
                                </div>
                                <div class="col-md-6 col-12 mb-4">
                                    <label for="flatpickr-date" class="form-label">Ngày sinh</label>
                                    <input type="text" class="form-control" placeholder="YYYY-MM-DD" id="flatpickr-date" />
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label for="slGender" class="form-label">Giới tính</label>
                                    <select id="slGender" class="selectpicker w-100" data-style="btn-default">
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                        <option value="3">Khác</option>
                                    </select>
                                </div>

                                <div class="col-12 d-flex justify-content-between">
                                    <button class="btn btn-label-secondary btn-prev" disabled>
                                        <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
                                        <span class="align-middle d-sm-inline-block d-none">Previous</span>
                                    </button>
                                    <button class="btn btn-primary btn-next">
                                        <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
                                        <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Personal Info -->
                        <div id="personal-info" class="content">
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label class="form-label">Mã CCCD/CMT</label>
                                    <input type="text" id="txtIdentity" class="form-control" placeholder="Nhập CCCD/CMT" />
                                </div>
                                <div class="col-sm-6">
                                    <label for="flatpickr-date-identity" class="form-label">Ngày cấp</label>
                                    <input type="text" class="form-control" placeholder="YYYY-MM-DD" id="flatpickr-date-identity" />
                                </div>
                                <div class="col-sm-12">
                                    <label for="flatpickr-date-identity" class="form-label">Nơi cấp</label>
                                    <textarea class="form-control" id="txtReceivePlace" rows="2"></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="card">
                                        <h5 class="card-header">Ảnh CCCD/CMT</h5>
                                        <div class="card-body">
                                            <div action="/Home/UploadFiles" class="dropzone needsclick" id="dropzone-multi">
                                                <div class="dz-message needsclick">
                                                    Drop files here or click to upload
                                                    <span class="note needsclick">
                                                        Hãy tải ảnh CCCD/CMT người dùng tại đây
                                                    </span>
                                                </div>
                                                <div class="fallback">
                                                    <input name="file" type="file" />
                                                </div>
                                                <input type="hidden" id="currentMultilImage" value="">
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-between">
                                    <button class="btn btn-primary btn-prev">
                                        <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
                                        <span class="align-middle d-sm-inline-block d-none">Previous</span>
                                    </button>
                                    <button class="btn btn-primary btn-next">
                                        <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
                                        <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Social Links -->
                        <div id="social-links" class="content">
                            <div class="row g-3">
                                <div class="col-ms-12 col-md-12 col-lg-12 col-xl-12">
                                    <div class="row mt-3">
                                        <div class="col-md-12" style="text-align: right">
                                            <button type="button" class="btn btn-outline-primary" onclick="checkBankAccount()">
                                                Kiểm tra tài khoản
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-ms-9 col-md-9 col-lg-9 col-xl-9">
                                    <div id="formContact">
                                        <div class="row mt-3">
                                            <div class="col-md-4">
                                                <label class="text-dark">
                                                    Ngân hàng:
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <div id="slBank"
                                                     name="native-select"
                                                     placeholder="Chọn ngân hàng"
                                                     data-search="true"
                                                     data-silent-initial-value-set="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-4">
                                                <label class="text-dark">
                                                    Số tài khoản:
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <input type="hidden" name="AccountNo" />
                                                <input name="AccountNoValue" id="valAccountNo" class="form-control " type="text" />
                                            </div>
                                        </div>

                                        <div class="row mt-3">
                                            <div class="col-md-4">
                                                <label class="text-dark">
                                                    Tên tài khoản:
                                                </label>
                                            </div>
                                            <div class="col-md-8">
                                                <input type="hidden" name="AccountName" />
                                                <input name="AccountNameValue" id="valAccountName" class="form-control " type="text" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-ms-3 col-md-3 col-lg-3 col-xl-3">
                                    <div class="col-md-12 mt-3" style="text-align: center">
                                        <img id="imgVietQR" src="" style="max-height: 300px; max-width: 300px;" class="w-px-90 " />
                                    </div>

                                </div>
                                <div class="col-12 d-flex justify-content-between">
                                    <button class="btn btn-primary btn-prev">
                                        <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
                                        <span class="align-middle d-sm-inline-block d-none">Previous</span>
                                    </button>
                                    <button class="btn btn-label-secondary btn-next" disabled>
                                        <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
                                        <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 mb-4">
            <div class="bs-stepper wizard-numbered-address mt-2">
                <div class="bs-stepper-header">
                    <div class="step" data-target="#home-address">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle"><i class='bx bx-home'></i></span>
                            <span class="bs-stepper-label mt-1">
                                <span class="bs-stepper-title">Địa chỉ nhà</span>
                                <span class="bs-stepper-subtitle">Địa chỉ thường trú</span>
                            </span>
                        </button>
                    </div>
                    <div class="line">
                        <i class="bx bx-chevron-right"></i>
                    </div>
                    <div class="step" data-target="#office-address">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle"><i class='bx bxs-buildings'></i></span>
                            <span class="bs-stepper-label mt-1">
                                <span class="bs-stepper-title">Địa chỉ văn phòng</span>
                                <span class="bs-stepper-subtitle">Thông tin địa chỉ công ty</span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="bs-stepper-content">
                    <div autocomplete="off">
                        <div id="home-address" class="content">
                            <div class="row g-3">
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label class="text-dark">
                                            Quận/huyện:
                                        </label>
                                    </div>
                                    <div class="col-md-8">
                                        <div id="slProvinceHome"
                                             name="native-select"
                                             placeholder="Chọn quận/huyện"
                                             data-search="true"
                                             data-silent-initial-value-set="true">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label class="text-dark">
                                            Địa chỉ chi tiết:
                                        </label>
                                    </div>
                                    <div class="col-md-8">
                                        <textarea class="form-control" id="txtHomeAddress" rows="2"></textarea>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-between">
                                    <button class="btn btn-label-secondary btn-prev" disabled>
                                        <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
                                        <span class="align-middle d-sm-inline-block d-none">Previous</span>
                                    </button>
                                    <button class="btn btn-primary btn-next">
                                        <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
                                        <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div id="office-address" class="content">
                            <div class="row g-3">
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label class="text-dark">
                                            Quận/huyện:
                                        </label>
                                    </div>
                                    <div class="col-md-8">
                                        <div id="slProvinceOffice"
                                             name="native-select"
                                             placeholder="Chọn quận/huyện"
                                             data-search="true"
                                             data-silent-initial-value-set="true">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label class="text-dark">
                                            Địa chỉ chi tiết:
                                        </label>
                                    </div>
                                    <div class="col-md-8">
                                        <textarea class="form-control" id="txtOfficeAddress" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-between">
                                    <button class="btn btn-primary btn-prev">
                                        <i class="bx bx-chevron-left bx-sm ms-sm-n2"></i>
                                        <span class="align-middle d-sm-inline-block d-none">Previous</span>
                                    </button>
                                    <button class="btn btn-label-secondary btn-next" disabled>
                                        <span class="align-middle d-sm-inline-block d-none me-sm-1">Next</span>
                                        <i class="bx bx-chevron-right bx-sm me-sm-n2"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="mt-1 mb-1 pull-right pr-10 pb-10">
                    <button style="float: right;" class="btn btn-primary" id="btnAdd" onclick="saveCreateUser()"> <i class='menu-icon tf-icons bx bx-plus'></i> Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

